<div class="edit-container">
  <%= render 'shared/sidebar' %>
  <div class="review-container" style="padding-top:20px">
    <div class="review-container-main">
      <div class="title" style="margin-bottom:20px">
        <h1 class="heading"><%= @novel.title %></h1>
      </div>
      <div contenteditable="true" class = "review-novel" data-id=<%="#{@novel.id}"%> >
        <%= @novel.content.html_safe %>
      </div>
    </div>
  <div class="review-container-right">

  <div class="review-comments">
  </div>
  <%= render 'shared/review' %>
    <br>
  <% if @novel.user == current_user %>
    <button class="btn btn-primary save" onclick="saveNovel()">Save</button>
  <% end %>
  <br>
</div>
</div>
