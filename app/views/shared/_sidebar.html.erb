<div class="sidebar">
  <div class="sidebar-heading-container">
    <%= link_to "Novelty", root_path, class: "sidebar-heading" %>
  </div>
  <ul class="sidebar-menu">
    <% if current_user.favorite == 0 %>
      <li class="sidebar-menu-item"><%= link_to "Write", edit_novel_path(current_user.novels.last)%></li>
    <% else %>
      <li class="sidebar-menu-item"><%= link_to "Write", edit_novel_path(current_user.favorite)%></li>
    <% end %>
    <li class="sidebar-menu-item"><%= link_to "Dashboard", user_path(current_user)%></li>
    <li class="sidebar-menu-item"><%= link_to "Inbox", user_path(current_user)%></li>
    <li class="sidebar-menu-item"><%= link_to "Create", new_goal_path %></li>
    <li class="sidebar-menu-item"><%= link_to "Review", review_path(current_user.novels.last) %></li>
   <!-- <li class="sidebar-menu-item"><a href="#">Review</a></li> not currently in use -->
  </ul>
  <div class="sidebar-footer">
    <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-primary"%>
  <!-- <p class="sample">V</p> -->
  </div>
</div>
