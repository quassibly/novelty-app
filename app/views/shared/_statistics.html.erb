  <dialog id="statistics">
  <div class="dialog2">
    <p class="heading">Statistics</p>
    <div class="flex-counted">
      <div class="top-5">
        <p class="top-words">Top 5 Words</p>

        <table>
          <% @filtered_words.first(5).each do |key| %>
            <tr>
              <td align="left">'<%= key[0] %>'</td>
              <td align="right"><%= key[1] %> times</td>
            </tr>
        <% end %>
        </table>
      </div>

      <div class="counted-words">
        <p>Total Word Count: <%= @novel.novel_wordcount %></p>
        <p>Todays Word Count: <%= @novel.novel_wordcount - @novel.yesterday_total_all %></p>
        <p>Unique Words: <%=  @counter.uniq_token_count %></p>
        <p>Character Count: <%= @counter.char_count %></p>
      </div>
    </div>
      <div class="modal-actions">
        <button id="cancel2" type="reset" class="btn btn-secondary">Keep Writing</button>
      </div>
  </div>


</dialog>


<!-- <menu> -->
  <button id="stats" class="btn btn-secondary">Word Stats</button>
<!-- </menu> -->

  <script>
    const cancelButton2 = document.getElementById('cancel2');
    const statsButton = document.getElementById('stats')
    const dialog2 = document.getElementById('statistics')

    statsButton.addEventListener('click', function() {
      dialog2.showModal();
    });
    cancelButton2.addEventListener('click', function() {
      dialog2.close();
    });
  </script>
