  <dialog id="statistics">
  <div class="dialog2">
    <p>Total Word Count: <%= @counter.token_count %></p>
  <p>Todays Word Count: <%= @counter.token_count %> minus Yesterdays Total Word Count</p>

  <p>Unique Words: <%=  @counter.uniq_token_count %></p>
  <p>Character Count: <%= @counter.char_count %></p>
  <p>Top 5 Words: <% @counter.token_frequency.each do |key, value| %>
    <% stop_words = ["a", "all", "am", "an", "and", "any", "are", "aren't", "as", "at", "b", "be", "been", "being", "best", "by", "but", "c", "can", "can't", "d", "did", "do", "does", "doesn't", "don't", "e", "each", "f", "few", "for", "from", "get", "got", "has", "hasn't", "her", "his", "him", "how", "i", "if", "i'd", "in", "is", "isn't", "it", "it's", "me", "much", "many", "my", "not", "of", "off", "on", "one", "only", "or", "out", "so", "the", "to", "too", "you", "who", "no", "that", "this", "we", "us"] %>

    <% unless stop_words.include?(key)  %>
      <% filtered_words = [] %>
      <% filtered_words << [key, value] %>
      <% filtered_words.each do |key| %>
       <table border="1" width="300px">
          <tr>
            <td width="150px">'<%= key[0] %>'</td>
            <td width="150px" align="right"><%= key[1] %></td>
          <% end %>
          </tr>
      </table>
    <% end %>
  <% end %>
  </p>
      <div class="modal-actions">
        <button id="cancel2" type="reset" class="btn btn-secondary">Cancel</button>
      </div>
  </div>
</dialog>


<!-- <menu> -->
  <button id="stats" class="btn btn-secondary">Stats</button>
<!-- </menu> -->

  <script>
    const cancelButton2 = document.getElementById('cancel2');
    const statsButton = document.getElementById('stats')
    const dialog2 = document.getElementById('statistics')

    statsButton.addEventListener('click', function() {
      dialog2.showModal();
    });
    cancelButton2.addEventListener('click', function() {
      dialog2.close();
    });
  </script>


