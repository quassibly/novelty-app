<%= render 'shared/navbar' %>
<div class="banner">
  <div class="typed-container">
    <div id="typed-strings">
        <p>Once upon a time, ^900 Novelty helped me finish my book...</p>
    </div>
    <span id="typed" class="banner-title"></span>
  </div>
  <i class="arrow down"></i>
</div>

<div class="container-main">
  <div class="form-container">
    <%= simple_form_for Novel.new, :url => new_goal_path, method: :get do |f| %>
    <%= f.text_area(:content, :size => "100x30", class: "novel", placeholder: "Start writing right here, right now...") %>
      <div class="new-novel-save-container">
        <span> <%= submit_tag('Save Novel', class: "btn btn-primary")%></span>
      </div>
    <% end %>
  </div>
</div>
<%= render 'shared/footer' %>
